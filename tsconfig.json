{
  "compilerOptions": {
    "target": "ES2017",
    "module": "NodeNext",
    "lib": ["ESNext"],
    "sourceMap": true,
    "outDir": "out",
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
     "src/**/*.ts",
     "src/**/*.json"
  ],
  "exclude": [
     "out",
     "node_modules"
  ]
}
